@model JigsawProductBrowser.Models.ProductResponse
@{
    int currentPage = (Model.Skip / Model.Limit) + 1;
    int totalPages = (int)Math.Ceiling((double)Model.Total / Model.Limit);
}

<div class="container">
    <h1 class="my-4">Product Browser <small class="text-muted">(@Model.Total total)</small></h1>

    <div class="row">
        @foreach (var p in Model.Products)
        {
            <div class="col-md-3 mb-4">
                <div class="card h-100">
                    <img src="@p.Thumbnail" class="card-img-top" style="height: 150px; object-fit: cover;">
                    <div class="card-body">
                        <h6>@p.Title</h6>
                        <p class="text-success">$@p.Price</p>
                        <div>
                            @foreach (var tag in p.Tags)
                            {
                                <span class="badge bg-secondary me-1">@tag</span>
                            }
                        </div>
                    </div>
                    <div class="card-footer bg-transparent border-top-0">
                        <a asp-action="Details" asp-route-id="@p.Id" class="btn btn-sm btn-outline-primary w-100">View</a>
                    </div>
                </div>
            </div>
        }
    </div>

    <nav>
        <ul class="pagination">
            <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                <a class="page-link" asp-action="Index" asp-route-page="@(currentPage - 1)">Previous</a>
            </li>
            <li class="page-item disabled"><span class="page-link">Page @currentPage of @totalPages</span></li>
            <li class="page-item @(currentPage >= totalPages ? "disabled" : "")">
                <a class="page-link" asp-action="Index" asp-route-page="@(currentPage + 1)">Next</a>
            </li>
        </ul>
    </nav>
</div>